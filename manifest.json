{
  "manifest_version": 2,
  "name": "Tsundoku Queue",
  "version": "0.1.0",
  "description": "Save articles to a local queue and export as a single EPUB.",
  "browser_action": {
    "default_title": "Tsundoku Queue",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["utils/utils.js", "utils/db.js", "utils/epub.js", "background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "storage", "downloads", "tabs", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
