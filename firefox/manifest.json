{
  "manifest_version": 2,
  "name": "Tsundoku",
  "version": "0.1.0",
  "description": "Save articles and export them as a single EPUB.",
  "browser_action": {
    "default_title": "Tsundoku",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["utils/utils.js", "utils/db.js", "utils/epub.js", "background.js"],
    "persistent": true
  },
  "permissions": ["activeTab", "storage", "downloads", "tabs", "<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "parsers/utils.js",
        "parsers/registry.js",
        "parsers/wikipedia.js",
        "parsers/guardian.js",
        "parsers/psyche.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
